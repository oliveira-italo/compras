type Compra {
    id:ID!
    quantidade:Int!
    status:String!
    cliente:Cliente!
    produto:Produto!
}

input CompraInput {
    id:ID
    quantidade:Int!
    status:String!
    clienteId:ID!
    produtoId:ID!
}

type CompraRelatorio {
    compraId:ID!
    cliente:String!
    produto:String!
    quantidade:Int!
}

extend type Query {
    compra(id:ID!):Compra!
    compras(page:Int = 0, size:Int = 10):[Compra]!
    comprasRelatorio:[CompraRelatorio]!
}

extend type Mutation {
    saveCompra(compra:CompraInput!):Compra!
    deleteCompra(id:ID!):Boolean
}